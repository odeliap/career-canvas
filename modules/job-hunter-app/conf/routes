# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Home page
GET     /                           controllers.UserController.showLoginForm()

# User/admin stuff
GET     /users/doLogin              controllers.UserController.processLoginAttempt()
GET     /users/signUp               controllers.UserController.showSignUpForm()
GET     /users/doSignUp             controllers.UserController.processSignUpAttempt()

# pages for authenticated users
GET     /users/logout               controllers.AuthenticatedUserController.logout()

GET     /home                       controllers.AuthenticatedUserController.home()
GET     /feed                       controllers.AuthenticatedUserController.feed()
GET     /network                    controllers.AuthenticatedUserController.network()
GET     /jobStats                   controllers.AuthenticatedUserController.jobStats()

# pages for policies
GET     /helpCenter/termsOfUse          controllers.PolicyController.termsOfUse()
GET     /helpCenter/privacyPolicy       controllers.PolicyController.privacyPolicy()
GET     /helpCenter/cookiesPolicy       controllers.PolicyController.cookiesPolicy()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)